<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Logo del restaurante -->
    <ImageView
        android:id="@+id/imgLogo"
        android:src="@drawable/logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/logo_restaurante"/>

    <!-- Campo para ingresar cantidad de Pastel de Choclo -->
    <EditText
        android:id="@+id/edtPastelCantidad"
        android:hint="@string/cantidad_pastel"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imgLogo"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Subtotal del Pastel -->
    <TextView
        android:id="@+id/txtPastelSubtotal"
        android:text="@string/subtotal_pastel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edtPastelCantidad"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Imagen del Pastel -->
    <ImageView
        android:id="@+id/imgPastel"
        android:src="@drawable/pastel"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/txtPastelSubtotal"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/imagen_pastel"/>

    <!-- Campo para ingresar cantidad de Cazuela -->
    <EditText
        android:id="@+id/edtCazuelaCantidad"
        android:hint="@string/cantidad_cazuela"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imgPastel"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Subtotal de la Cazuela -->
    <TextView
        android:id="@+id/txtCazuelaSubtotal"
        android:text="@string/subtotal_cazuela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edtCazuelaCantidad"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Imagen de la Cazuela -->
    <ImageView
        android:id="@+id/imgCazuela"
        android:src="@drawable/cazuela"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/txtCazuelaSubtotal"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/imagen_cazuela"/>

    <!-- Switch para activar o desactivar propina -->
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchPropina"
        android:text="@string/agregar_propina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/imgCazuela"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Total de comida sin propina -->
    <TextView
        android:id="@+id/txtTotalComida"
        android:text="@string/comida_total"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/switchPropina"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Monto de la propina -->
    <TextView
        android:id="@+id/txtPropinaMonto"
        android:text="@string/propina_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtTotalComida"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Total final con propina -->
    <TextView
        android:id="@+id/txtTotalFinal"
        android:text="@string/total_final"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtPropinaMonto"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
